{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "~/": ["./src/"],
      "~/*": ["./src/*"]
    }
  },
  "include": ["package.json", "src/**/*.ts"],
  "exclude": ["src/**/*.test.ts"]
}
