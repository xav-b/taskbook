{
  "name": "taskbook",
  "productName": "Taskbook",
  "version": "0.18.0",
  "description": "Tasks, boards & notes for the command-line habitat",
  "repository": "xav-b/taskbook",
  "license": "MIT",
  "author": {
    "name": "Xavier Bruhiere",
    "email": "xavier.bruhiere@gmail.com",
    "url": "https://xavierbruhiere.com"
  },
  "bin": {
    "tb": "dist/src/interfaces/cli.js",
    "tb-serve": "dist/src/interfaces/server.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "task",
    "board",
    "note",
    "todo",
    "notebook",
    "console",
    "cli"
  ],
  "packageManager": "pnpm@9.1.2",
  "scripts": {
    "db:generate": "drizzle-kit generate --config src/store/drizzle/drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config src/store/drizzle/drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config src/store/drizzle/drizzle.config.ts",
    "db:init": "pnpm run db:generate && pnpm run db:migrate",
    "build": "npx tsc",
    "build:esm": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "npx tsc --watch",
    "test": "vitest"
  },
  "dependencies": {
    "@breejs/later": "^4.2.0",
    "@google-cloud/local-auth": "2.1.0",
    "@iarna/toml": "^2.2.5",
    "@libsql/client": "^0.5.3",
    "chalk": "4.1.0",
    "clipboardy": "2.3.0",
    "commander": "^12.0.0",
    "date-fns": "^3.6.0",
    "drizzle-orm": "^0.33.0",
    "enquirer": "^2.4.1",
    "googleapis": "105",
    "nanoid": "3",
    "node-notifier": "^10.0.1",
    "signale": "1.4.0",
    "tmp": "^0.2.3",
    "typescript": "^5.4.3",
    "update-notifier": "5.0.1"
  },
  "devDependencies": {
    "@types/breejs__later": "^4",
    "@types/chalk": "^2.2.0",
    "@types/node": "^20.11.30",
    "@types/signale": "^1.4.7",
    "@types/tmp": "^0.2.6",
    "@types/update-notifier": "^6.0.8",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "drizzle-kit": "^0.24.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-formatter-pretty": "^6.0.1",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "semver": "^7.6.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.0",
    "vitest": "^1.4.0"
  },
  "xo": {
    "space": 2
  }
}
